<launch>
    <!--arg name="icp" default="point_to_plane"
         doc="ICP error minimizer, from {point_to_plane, point_to_plane_4dof}."/>

    <include file="$(find nifti_laser_assembler)/launch/nifti_laser_assembler.launch"/>

    <include file="$(dirname)/map_fast.launch" /-->

    <node name="dynamic_mapper" type="dynamic_mapper" pkg="ethzasl_icp_mapper" output="screen">
        <param name="subscribe_scan" value="false"/>
        <!--param if="$(eval icp == 'point_to_plane')"
               name="icpConfig" value="$(dirname)/dynamic_mapper/icp.yaml"/>
        <param if="$(eval icp == 'point_to_plane_4dof')"
               name="icpConfig" value="$(dirname)/dynamic_mapper/icp_4dof.yaml"/-->

        <param name="icpConfig" value="$(dirname)/icp.yaml"/>
        <param name="inputFiltersConfig" value="$(dirname)/input_filters.yaml"/>
        <param name="mapPostFiltersConfig" value="$(dirname)/map_post_filters.yaml"/>
        <param name="odom_frame" value="odom"/>
        <param name="map_frame" value="map"/>
        <param name="useROSLogger" value="true"/>
        <param name="minOverlap" value="0.1" />
        <param name="maxOverlapToMerge" value="0.99"/>
        <!--<param name="minReadingPointCount" value="1000"/>-->
        <param name="minReadingPointCount" value="500"/>
        <!--<param name="minMapPointCount" value="1000"/>-->
        <param name="minMapPointCount" value="500"/>
        <param name="localizing" value="true"/>
        <param name="mapping" value="true"/>
        <!-- Disable refreshing map-to-odom transform. -->
        <param name="tfRefreshPeriod" value="0.0"/>

        <!-- Parameters for dynamic elements -->
        <param name="priorStatic" value="0.70"/>
        <param name="priorDyn" value="0.30"/>
        <param name="maxAngle" value="0.04"/>
        <param name="eps_a" value="0.20"/>
        <param name="eps_d" value="0.1"/>
        <param name="alpha" value="0.99"/>
        <param name="beta" value="0.90"/>
        <param name="maxDyn" value="0.90"/>
        <param name="maxDistNewPoint" value="0.10"/>
        <param name="sensorMaxRange" value="40.0"/>

        <remap from="cloud_in" to="dynamic_point_cloud"/>
    </node>
</launch>
